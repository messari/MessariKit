{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"*/node_modules/*",
			"*/dist/*",
			"packages/types/*",
			"packages/api/src/types/*"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"lineWidth": 160,
			"indentStyle": "space",
			"quoteProperties": "preserve",
			"quoteStyle": "double",
			"bracketSpacing": true,
			"arrowParentheses": "always"
		}
	}
}
